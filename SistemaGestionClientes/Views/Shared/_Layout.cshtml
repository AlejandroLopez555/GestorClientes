<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Super Repuestos</title>

    <!-- Bootstrap + Tema Personalizado -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/custom.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">
            <!-- Logo Bandera de Carreras + Nombre -->
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <span class="racing-flag"></span>
                SUPER REPUESTOS
            </a>

            <!-- Menú Simplificado -->
            <div class="navbar-nav ms-auto">
                <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Clientes", "Index", "Cliente", null, new { @class = "nav-link" })</li>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Footer Elegante -->
    <footer class="footer-elegante">
        <div class="container">
            <div class="footer-content">
                <div class="footer-brand">
                    <span class="footer-logo"></span>
                    SUPER REPUESTOS
                </div>

                <div class="footer-info">
                    <p>🏁 Taller automotriz especializado - Gestión profesional de clientes</p>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; @DateTime.Now.Year - Super Repuestos. Todos los derechos reservados.</p>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>